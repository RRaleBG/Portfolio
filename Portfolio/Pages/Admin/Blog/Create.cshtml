@page
@model Portfolio.Pages.Admin.Blog.CreateModel
@{
    ViewData["Title"] = "New Blog Post";
}

<section class="container-xxl">

    <div class="card">


    <h3 class="card-header text-secondary-emphasis">New Blog Post</h3>

    <form method="post" class="card-body">
        <div class="mb-3"><label class="form-label">Title</label><input asp-for="Item.Title" class="form-control" /></div>
        <div class="mb-3"><label class="form-label">Slug</label><input asp-for="Item.Slug" class="form-control" /></div>
        <div class="mb-3"><label class="form-label">Content</label><textarea rows="10" asp-for="Item.Content" class="form-control"></textarea></div>
        <button class="btn btn-sm btn-primary" type="submit">Create</button>
        <a class="btn btn-sm btn-outline-secondary" asp-page="Index">Cancel</a>
    </form>
    </div>

</section>