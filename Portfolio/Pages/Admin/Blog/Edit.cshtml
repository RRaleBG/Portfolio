@page "{id:int}"
@model Portfolio.Pages.Admin.Blog.EditModel
@{
    ViewData["Title"] = "Edit Blog Post";
}

<h2>Edit Blog Post</h2>
<form method="post">
    <input type="hidden" asp-for="Item.Id" />
    <div class="mb-3"><label class="form-label">Title</label><input asp-for="Item.Title" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">Slug</label><input asp-for="Item.Slug" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">Content</label><textarea rows="10" asp-for="Item.Content" class="form-control"></textarea></div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
</form>
