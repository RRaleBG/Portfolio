@page
@model Portfolio.Pages.Admin.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}
<h2>Forgot Password</h2>
<form method="post">
    <div class="mb-3"><label class="form-label">Email</label><input asp-for="Input.Email" class="form-control" autocomplete="username" /></div>
    <button class="btn btn-primary" type="submit">Send reset link</button>
</form>
@if (!string.IsNullOrEmpty(Model.Message)) { <div class="alert alert-success mt-3">@Model.Message</div> }
@if (!string.IsNullOrEmpty(Model.Error)) { <div class="alert alert-danger mt-3">@Model.Error</div> }
