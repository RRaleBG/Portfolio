@page
@model Portfolio.Pages.Admin.Projects.CreateModel
@{
    ViewData["Title"] = "New Project";
}
<section class="container-xxl">
    <div class="card">
        <div class="card-header">

            <h3 class="text-secondary-emphasis">New Project</h3>
        </div>

        <form method="post" class="card-body">
            <div class="mb-3"><label class="form-label">Title</label>
                <input asp-for="Item.Title" class="form-control" /></div>
            <div class="mb-3"><label class="form-label">Summary</label>
                <textarea asp-for="Item.Summary" class="form-control"></textarea></div>
            <div class="mb-3"><label class="form-label">Url</label>
                <input asp-for="Item.Url" class="form-control" /></div>
            <div class="mb-3"><label class="form-label">Image Url</label>
                <input asp-for="Item.ImageUrl" class="form-control" /></div>
            <div class="mb-3"><label class="form-label">Tags (comma)</label>
                <input asp-for="Item.Tags" class="form-control" /></div>
            <div class="mb-3"><label class="form-label">Date</label>
                <input asp-for="Item.Date" class="form-control" type="date" /></div>
            <button class="btn btn-primary" type="submit">Create</button>
            <a class="btn btn-secondary" asp-page="Index">Cancel</a>
        </form>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}