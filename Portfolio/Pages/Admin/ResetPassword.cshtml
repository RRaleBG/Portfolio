@page
@model Portfolio.Pages.Admin.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
<h2>Reset Password</h2>
<form method="post">
    <input type="hidden" asp-for="Input.UserId" />
    <input type="hidden" asp-for="Input.Token" />
    <div class="mb-3"><label class="form-label">New Password</label><input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" /></div>
    <div class="mb-3"><label class="form-label">Confirm Password</label><input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" /></div>
    <button class="btn btn-primary" type="submit">Reset Password</button>
</form>
@if (!string.IsNullOrEmpty(Model.Message)) { <div class="alert alert-success mt-3">@Model.Message</div> }
@if (!string.IsNullOrEmpty(Model.Error)) { <div class="alert alert-danger mt-3">@Model.Error</div> }
