@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="py-5 index-page">
  <div class="container-xxl text-center">
    <div class="row justify-content-center align-items-center g-4">
      <div class="col-lg-8">
        <h1 class="display-4 fw-extrabold brand-gradient p-1">Software Engineer & AI Builder</h1>
       
        <p class="lead text-muted mb-4">I design and ship fast, reliable products. Dark, modern, minimalist — with a focus on DX and performance.</p>
        <div class="d-flex justify-content-center gap-2">
          <a class="btn btn-primary btn-lg" href="/Projects">View Projects</a>
          <a class="btn btn-outline-secondary btn-lg" href="/Cv">View CV</a>
        </div>
        <div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
          <div class="card px-4 py-3"><div class="small text-muted">Experience</div><div class="h4 m-0">8+ yrs</div></div>
          <div class="card px-4 py-3"><div class="small text-muted">Projects</div><div class="h4 m-0">25+</div></div>
          <div class="card px-4 py-3"><div class="small text-muted">Open Source</div><div class="h4 m-0">10 repos</div></div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container-xxl">
    <h2 class="h3 mb-3">Featured Projects</h2>
    <div class="row row-cols-1 row-cols-md-3 g-3">
      @foreach (var p in Model.Projects)
      {
        <div class="col">
            <div class="card js reveal-inside hover-lift h-100">
            @if(!string.IsNullOrEmpty(p.ImageUrl)) 
            { 
                <img class="card-img-top" src="@p.ImageUrl" alt="@p.Title" loading="lazy" />
            }
            <div class="card-body">
              <h5 class="card-title">@p.Title</h5>
              <p class="card-text text-muted">@p.Summary</p>
              <div class="d-flex gap-2">
                @if(!string.IsNullOrEmpty(p.Url)) { <a class="btn btn-sm btn-primary" href="@p.Url" target="_blank">Open</a> }
                <a class="btn btn-sm btn-outline-secondary" asp-page="/Projects">All Projects</a>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
</section>